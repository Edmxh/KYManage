<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.MainMenuActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorBackground3"
    >
    <!--android:background="@drawable/loginbackground"-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/colorBackground2"
            >
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:layout_height="30dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:text="首页"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="@dimen/text1"/>
            <TextView
                android:id="@+id/user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text2"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="注销"
                android:textSize="@dimen/text2"
                android:textColor="@color/colorWhite"
                android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/cggl_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="采购管理"
            android:textColor="@color/fontcolor1"
            android:textSize="@dimen/text2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MyGridView1"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:stretchMode="columnWidth"
            android:numColumns="4"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="20dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">
        </GridView>
        <!--android:layout_marginTop="50dp"
        android:columnWidth="90dp"-->

    </LinearLayout>
    <LinearLayout
        android:id="@+id/wxgl_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="外协管理"
            android:textColor="@color/fontcolor1"
            android:textSize="@dimen/text2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MyGridView2"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:stretchMode="columnWidth"
            android:numColumns="4"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="20dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">
        </GridView>
        <!--android:layout_marginTop="50dp"
        android:columnWidth="90dp"-->

    </LinearLayout>
    <LinearLayout
        android:id="@+id/kfgl_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="库房管理"
            android:textColor="@color/fontcolor1"
            android:textSize="@dimen/text2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MyGridView3"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:stretchMode="columnWidth"
            android:numColumns="4"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">
        </GridView>
        <!--android:layout_marginTop="50dp"
        android:columnWidth="90dp"-->

    </LinearLayout>
    <LinearLayout
        android:id="@+id/wlcx_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="物料查询"
            android:textColor="@color/fontcolor1"
            android:textSize="@dimen/text2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/MyGridView4"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:stretchMode="columnWidth"
            android:numColumns="4"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="10dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp">
        </GridView>
        <!--android:layout_marginTop="50dp"
        android:columnWidth="90dp"-->

    </LinearLayout>
</LinearLayout>