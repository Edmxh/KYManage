                android:layout_weight="0.5"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/query"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/search"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
